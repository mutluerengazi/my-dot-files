{
  "base_keymap": "VSCode",
  "theme": "Gruvbox Dark",
  "vim_mode": true,
  //font
  "ui_font_size": 12,
  "buffer_font_size": 11.5,
  "ui_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "cursor_blink": false,
  //other
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "hour_format": "hour24",
  "relative_line_numbers": true,
  "project_panel": {
    "button": true,
    "dock": "right",
    "git_status": true
  },
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font",
    "blinking": "off"
  }
}
